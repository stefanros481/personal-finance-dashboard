# Application Settings
APP_NAME="Personal Finance Dashboard"
DEBUG=True
API_VERSION="v1"
API_PREFIX="/api"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM="HS256"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/finance_dashboard"
# For development, you can use SQLite:
# DATABASE_URL="sqlite:///./finance_dashboard.db"

# Redis Cache
REDIS_URL="redis://localhost:6379/0"
CACHE_EXPIRE_MINUTES=15

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# External APIs
YNAB_API_KEY="your-ynab-api-key"
YNAB_BUDGET_ID="your-ynab-budget-id"